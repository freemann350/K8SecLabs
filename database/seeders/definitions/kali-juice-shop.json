{
  "items": [
    {
      "apiVersion": "apps/v1",
      "kind": "Deployment",
      "metadata": {
        "name": "owasp-juice-shop",
        "namespace": "{*NAMESPACE*}"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "matchLabels": {
            "app": "owasp-juice-shop"
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "app": "owasp-juice-shop"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "owasp-juice-shop",
                "image": "bkimminich/juice-shop",
                "ports": [
                  {
                    "containerPort": 3000
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "owasp-juice-shop",
        "namespace": "{*NAMESPACE*}"
      },
      "spec": {
        "selector": {
          "app": "owasp-juice-shop"
        },
        "ports": [
          {
            "protocol": "TCP",
            "port": 80,
            "targetPort": 3000
          }
        ],
        "type": "ClusterIP"
      }
    },
    {
      "apiVersion": "apps/v1",
      "kind": "Deployment",
      "metadata": {
        "name": "kali-web",
        "namespace": "{*NAMESPACE*}"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "matchLabels": {
            "app": "kali-web"
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "app": "kali-web"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "kali-web",
                "image": "freemann350/kali-xfce-vnc",
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ],
                "env": [
                  {
                    "name": "VNCPWD",
                    "value": "testing"
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "kali-web",
        "namespace": "{*NAMESPACE*}"
      },
      "spec": {
        "selector": {
          "app": "kali-web"
        },
        "ports": [
          {
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080,
            "nodePort": "{*ACCESS_PORT*}"
          }
        ],
        "type": "LoadBalancer"
      }
    }
  ]
}