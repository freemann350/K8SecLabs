{
  "items": [
    {
      "apiVersion": "apps/v1",
      "kind": "Deployment",
      "metadata": {
        "name": "alpine-ssh",
        "namespace": "{*NAMESPACE*}"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "matchLabels": {
            "app": "alpine-ssh"
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "app": "alpine-ssh"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "alpine-ssh",
                "image": "woahbase/alpine-ssh:x86_64",
                "env": [
                  {
                    "name": "PGID",
                    "value": "1000"
                  },
                  {
                    "name": "PUID",
                    "value": "1000"
                  },
                  {
                    "name": "S6_USER",
                    "value": "alpine"
                  },
                  {
                    "name": "S6_USERPASS",
                    "value": "{*CRACKABLE_PASSWORD*}"
                  },
                  {
                    "name": "S6_ROOTPASS",
                    "value": "extremelyinsecurerootpassword"
                  }
                ],
                "ports": [
                  {
                    "containerPort": 22
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "apps/v1",
      "kind": "Deployment",
      "metadata": {
        "name": "kali-web",
        "namespace": "{*NAMESPACE*}"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "matchLabels": {
            "app": "kali-web"
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "app": "kali-web"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "kali-web",
                "image": "freemann350/kali-xfce-vnc",
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ],
                "env": [
                  {
                    "name": "VNCPWD",
                    "value": "{*VNC_PASSWORD*}"
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "kali-web",
        "namespace": "{*NAMESPACE*}"
      },
      "spec": {
        "selector": {
          "app": "kali-web"
        },
        "ports": [
          {
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080,
            "nodePort": "{*ACCESS_PORT*}"
          }
        ],
        "type": "NodePort"
      }
    }
  ]
}
